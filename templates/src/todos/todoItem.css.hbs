.todoItem {
display: flex;
align-items: center;
gap: 0.75rem;
padding: 0.75rem;
border-bottom: 1px solid var(--border);
}

.todoItem:last-child {
border-bottom: none;
}

.todoItem input[type="checkbox"] {
width: 1.25rem;
height: 1.25rem;
cursor: pointer;
flex-shrink: 0;
}

.todoItem label {
flex: 1;
cursor: pointer;
user-select: none;
}

.todoItem.completed label {
text-decoration: line-through;
opacity: 0.6;
}

.todoItem button {
flex-shrink: 0;
}