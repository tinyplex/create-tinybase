import './drawingControls.css';
import {Store, MergeableStore} from 'tinybase';
{{includeFile template="src/shared/button.ts.hbs" output="src/shared/button.{{ext}}"}}
import {createButton} from '../shared/button';
{{includeFile template="src/drawing/colorPicker.ts.hbs" output="src/drawing/colorPicker.{{ext}}"}}
import {createColorPicker} from './colorPicker';
{{includeFile template="src/drawing/brushSize.ts.hbs" output="src/drawing/brushSize.{{ext}}"}}
import {createBrushSize} from './brushSize';

export const createDrawingControls = (settingsStore: Store, canvasStore: MergeableStore): HTMLDivElement => {
const controls = document.createElement('div');
controls.id = 'drawingControls';

controls.appendChild(createColorPicker(settingsStore));
controls.appendChild(createBrushSize(settingsStore));

const clearButton = createButton('Clear', () => canvasStore.delTable('strokes'), 'primary');
controls.appendChild(clearButton);

return controls;
};