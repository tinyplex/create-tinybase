import './drawingControls.css';
import {Store} from 'tinybase';
{{includeFile template="src/components/button.ts.hbs" output="src/components/button.{{ext}}"}}
import {createButton} from './button';
{{includeFile template="src/components/colorPicker.ts.hbs" output="src/components/colorPicker.{{ext}}"}}
import {createColorPicker} from './colorPicker';
{{includeFile template="src/components/brushSize.ts.hbs" output="src/components/brushSize.{{ext}}"}}
import {createBrushSize} from './brushSize';

export const createDrawingControls = (store: Store): HTMLDivElement => {
const controls = document.createElement('div');
controls.id = 'drawingControls';

controls.appendChild(createColorPicker(store));
controls.appendChild(createBrushSize(store));

const clearButton = createButton('Clear', () => store.delTable('strokes'), 'primary');
controls.appendChild(clearButton);

return controls;
};