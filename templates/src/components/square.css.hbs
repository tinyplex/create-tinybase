.square {
  width: 100px;
  height: 100px;
  background: var(--bg2);
  border: 2px solid var(--border);
  font-size: 2.5rem;
  font-weight: 800;
  color: var(--fg);
  cursor: pointer;
  transition: all 0.15s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

.square:hover:not(.square.disabled) {
  background: var(--bg);
  border-color: var(--accent);
}

.square.disabled {
  cursor: not-allowed;
  opacity: 0.7;
}

.square.winning {
  background: var(--accent);
  color: var(--bg);
}
