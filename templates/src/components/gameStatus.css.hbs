#gameStatus {
  text-align: center;
  font-size: 1.5rem;
  font-weight: 800;
  margin-bottom: 1rem;
  min-height: 2rem;
}

#gameStatus .player {
  color: var(--accent);
}

#gameStatus .winner {
  color: var(--accent);
  animation: pulse 1s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.7;
  }
}
