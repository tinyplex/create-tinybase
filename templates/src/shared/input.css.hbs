input[type="text"] {
padding: 0.5rem 0.75rem;
background: var(--bg);
border: 1px solid var(--border);
border-radius: 0.375rem;
color: var(--fg);
font-family: inherit;
font-size: 1rem;
line-height: 1.5;
width: 100%;
box-sizing: border-box;
align-self: center;
}

input[type="text"]:focus {
outline: none;
border-color: var(--accent);
}

input[type="text"]::placeholder {
color: var(--fg2);
}