import {createMessages} from '../components/messages';
{{includeFile template="src/components/usernameInput.ts.hbs" output="src/components/usernameInput.{{ext}}"}}
import {createUsernameInput} from '../components/usernameInput';
{{includeFile template="src/components/messageInput.ts.hbs" output="src/components/messageInput.{{ext}}"}}
import {createMessageInput} from '../components/messageInput';

const app = () => {
const store = createStore()
.setValue('username', 'Carol')
.setTable('messages', {
'1': {username: 'Alice', text: 'Hello!', timestamp: Date.now() - 60000},
'2': {username: 'Bob', text: 'Hi there!', timestamp: Date.now() - 30000},
});

const appContainer = document.getElementById('app')!;

appContainer.appendChild(createUsernameInput(store));

const messagesContainer = createMessages(store);
appContainer.appendChild(messagesContainer);

const messageInputContainer = createMessageInput(store);
appContainer.appendChild(messageInputContainer);

// Focus the input after it's in the DOM
const messageInput = messageInputContainer.querySelector('input')!;
messageInput.focus();

store.addTablesListener(() => {
const messageRows = store.getTable('messages');
const sortedIds = Object.keys(messageRows).sort(
(a, b) => messageRows[a].timestamp - messageRows[b].timestamp,
);

messagesContainer.innerHTML = '';
sortedIds.forEach((id) => {
const msg = messageRows[id];
const messageElement = createMessage(msg.username, msg.text, msg.timestamp);
messagesContainer.appendChild(messageElement);
});
});
};

export {app};