import {useValue, useSetValueCallback} from 'tinybase/ui-react';
import './usernameInput.css';
{{includeFile template="src/shared/Input.tsx.hbs" output="src/Input.{{ext}}"}}
import {Input} from './Input';

export const UsernameInput = () => {
const username = useValue('username', 'settings') || '';
const setUsername = useSetValueCallback(
'username',
(_e) => _e,[],
'settings',
);

return (
<div id="usernameInput">
  <label>Your name:</label>
  <Input value={username} onChange={setUsername} placeholder="Enter your name" />
</div>
);
};