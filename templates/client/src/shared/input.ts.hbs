export const createInput = (
placeholder: string = '',
value: string = '',
onInput?: (value: string) => void,
): HTMLInputElement => {
const input = document.createElement('input');
input.type = 'text';
input.placeholder = placeholder;
input.value = value;
if (onInput) {
input.addEventListener('input', () => onInput(input.value));
}
return input;
};
