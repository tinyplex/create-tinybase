{
"name": "{{projectName}}{{#if server}}-client{{/if}}",
"version": "1.0.0",
"scripts": {
{{#list}}
  {{includeFile template="client/index.html.hbs" output="client/index.html"}}
  "dev": "vite"
  {{#if typescript}}
    "build": "tsc && vite build"
  {{else}}
    "build": "vite build"
  {{/if}}
  "preview": "vite preview"
  {{#if prettier}}
    "format": "prettier --write ."
    "format:check": "prettier --check ."
  {{/if}}
  {{#if eslint}}
    "lint": "eslint ."
  {{/if}}
{{/list}}
},
"devDependencies": {
{{#list}}
  "vite": "^7.3.1"
  {{#if typescript}}
    "typescript": "^5.9.3"
    "@types/node": "^25.0.9"
    {{#if react}}
      "@types/react": "^19.2.8"
      "@types/react-dom": "^19.2.3"
    {{/if}}
  {{/if}}
  {{#if react}}
    "@vitejs/plugin-react": "^5.1.2"
  {{/if}}
  {{#if persistSqlite}}
    "vite-plugin-static-copy": "^3.2.0"
  {{/if}}
  {{#if persistPglite}}
    "vite-plugin-static-copy": "^3.2.0"
  {{/if}}
  {{#if prettier}}
    "prettier": "^3.8.0"
  {{/if}}
  {{#if eslint}}
    "eslint": "^9.39.2"
    {{#if typescript}}
      "typescript-eslint": "^8.53.1"
    {{/if}}
    {{#if react}}
      "eslint-plugin-react": "7.37.5"
      "eslint-plugin-react-hooks": "^7.0.1"
    {{/if}}
  {{/if}}
{{/list}}
},
"dependencies": {
{{#list}}
  "tinybase": "^7.3.2"
  {{#if react}}
    "react": "^19.2.3"
    "react-dom": "^19.2.3"
  {{/if}}
  {{#if sync}}
    "reconnecting-websocket": "^4.4.0"
  {{/if}}
  {{#if persistSqlite}}
    "@sqlite.org/sqlite-wasm": "^3.50.4-build1"
  {{/if}}
  {{#if persistPglite}}
    "@electric-sql/pglite": "^0.3.15"
  {{/if}}
{{/list}}
}
}
{{#if prettier}}
  {{includeFile template="client/.prettierrc.json.hbs" output="client/.prettierrc.json"}}
{{/if}}
{{#if eslint}}
  {{includeFile template="client/eslint.config.js.hbs" output="client/eslint.config.js"}}
{{/if}}
{{#if react}}
  {{includeFile template="client/vite.config.js.hbs" output="client/vite.config.js"}}
{{else}}
  {{#if persistSqlite}}
    {{includeFile template="client/vite.config.js.hbs" output="client/vite.config.js"}}
  {{/if}}
  {{#if persistPglite}}
    {{includeFile template="client/vite.config.js.hbs" output="client/vite.config.js"}}
  {{/if}}
{{/if}}
{{#if typescript}}
  {{includeFile template="client/tsconfig.json.hbs" output="client/tsconfig.json"}}
  {{includeFile template="client/vite-env.d.ts.hbs" output="client/src/vite-env.d.ts"}}
{{/if}}